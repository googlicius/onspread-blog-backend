{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 1
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "category": {
      "model": "category"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "slug": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "heart": {
      "type": "integer",
      "default": 0
    },
    "homeFeatured": {
      "type": "boolean",
      "default": false
    }
  }
}
